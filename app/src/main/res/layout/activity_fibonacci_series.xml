<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Fibonacci_series"
    android:background="#ff000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fibonacci Express!"
        android:id="@+id/heading"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#ff919191" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter number (n):"
        android:id="@+id/enter_number"
        android:layout_below="@+id/heading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#FF919191" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/number_field"
        android:layout_below="@+id/enter_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffffff" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/number_field"
        android:layout_alignRight="@+id/number_field"
        android:layout_alignEnd="@+id/number_field"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="250sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/result_display"
            android:layout_below="@+id/number_field"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ff000000"
            android:visibility="visible" />
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Fibonacci series!"
        android:id="@+id/button1"
        android:layout_below="@+id/result_display"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/result_display"
        android:layout_alignEnd="@+id/result_display"
        android:textColor="#FF919191"
        android:background="#ff000000" />

</RelativeLayout>
